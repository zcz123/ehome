<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/transparent_low" />

            <padding android:bottom="5dp" android:left="18dp" android:right="18dp" android:top="5dp" />

            <corners android:radius="5dp"></corners>

            <stroke android:width="1dp" android:color="@color/control_color"></stroke>
        </shape></item>
    <item><shape>
            <solid android:color="@color/transparent" />

            <padding android:bottom="5dp" android:left="18dp" android:right="18dp" android:top="5dp" />

            <corners android:radius="5dp"></corners>

            <stroke android:width="1dp" android:color="@color/action_bar_bg"></stroke>
        </shape></item>

</selector>