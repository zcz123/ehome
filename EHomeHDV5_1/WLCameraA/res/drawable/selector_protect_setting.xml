<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/transparent_low" />

            <padding android:bottom="10dp" android:left="35dp" android:right="35dp" android:top="10dp" />

            <corners android:radius="5dp"></corners>

            <stroke android:width="1dp" android:color="#dcdcdc"></stroke>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/transparent" />

            <padding android:bottom="10dp" android:left="35dp" android:right="35dp" android:top="10dp" />

            <corners android:radius="5dp"></corners>

            <stroke android:width="3dp" android:color="#ffffff"></stroke>
        </shape>
    </item>

</selector>