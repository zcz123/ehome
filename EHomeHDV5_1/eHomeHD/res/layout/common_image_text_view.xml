<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@id/imageText_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@id/imageText_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageText_img"
        android:layout_alignLeft="@id/imageText_img"
        android:layout_alignRight="@id/imageText_img"
        android:layout_alignTop="@id/imageText_img"
        android:gravity="center"
        android:maxLines="2"
        android:padding="?attr/listPreferredItemPaddingLeft" />

</RelativeLayout>